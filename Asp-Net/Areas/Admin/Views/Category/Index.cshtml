@model IEnumerable<Kategoria>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Kategorii</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Tworzenie" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Utwórz nową kategorię
            </a>
        </div>
    </div>
</div>
<br /><br />

<table  class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nazwa Kategorii.
            </th>
            <th>
                Ilość zamówienia
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Nazwa
                </td>
                <td width="30%">
                    @item.KolejnoscWyswietlania
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edycja" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edytuj</a>                  
                            <a asp-controller="Category" asp-action="Usun" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Usuń</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>