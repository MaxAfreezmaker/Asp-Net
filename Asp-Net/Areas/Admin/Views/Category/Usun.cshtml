@model Kategoria

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Usuń kategorie</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Nazwa">Nazwa</label>
            <input asp-for="Nazwa" disabled class="form-control" />         
        </div>
        <div class="mb-3">
            <label asp-for="KolejnoscWyswietlania">Wyświetlanie</label>
            <input asp-for="KolejnoscWyswietlania" disabled class="form-control" />          
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Usuń</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Wróć do listy
        </a>
    </div>
</form>

@section Scripts{
    @{
      <partial name="_ValidationScriptsPartial"/>
    }
}
